<div class="container flex flex-col items-center justify-center">
  {{> menu}}
  <div class="main-content mt-[2rem] flex flex-row w-[90%] h-[90%] max-h-[500px]">
    <div class="activity-history bg-[rgb(105,230,113)] flex-1 max-h-[500px]">
      <div class="name-panel text-center font-[600]">
        <span>Activity History</span>
      </div>

      <div class="log-panel mt-[0.5rem] bg-[rgb(243,245,247)] h-[330px] overflow-auto">
        <ul>
        </ul>
      </div>
    </div>

    <div class="staff-information ml-[0.5rem] bg-[rgb(73,84,183)] flex-1 h-[400px]">
      <div class="name-panel text-center font-[600]">
        <span>Staff</span>
      </div>
      <div class="staff-panel mx-[0.5rem] mt-[0.5rem] bg-[rgb(243,245,247)] max-h-[450px]">
        <ul class="ml-[0.5rem]">
          <li id="staff-name"></li>
          <li id="staff-username"></li>
        </ul>
      </div>

      <button id="sending-mail" class="bg-[rgb(149,131,131)] text-white text-[1rem] font-medium py-[0.8rem] px-[2rem] rounded-md hover:bg-gray-500">Send Mail</button>

      <button id="sendNotification" class="bg-[rgb(149,131,131)] text-white text-[1rem] font-medium py-[0.8rem] px-[2rem] rounded-md hover:bg-gray-500">Send Mobile</button>

    </div>
  </div>
</div>

<script type="module" src="./js/activityLog.js"></script>