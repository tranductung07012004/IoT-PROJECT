<div class="container flex-col flex items-center justify-center">

{{> menu}}

<!-- Hàng đầu tiên chứa các panel con gồm cảm biến temperature and humidity, photoresister, gas sensor-->
  <div class="first-row mt-[1rem] flex flex-row w-[90%]">
  <div class="tempHumid flex-1 w-full h-[13rem] bg-[rgb(202,212,198)] mx-[0.5rem]">
    <!-- Nội dung của cảm biến temperature and humidity -->
    <div class="title mt-[0.5rem] font-[600] text-center">
      <span>Temperature and humidity</span>
    </div>

    <div class="internal-parameters mt-[1rem] flex flex-col items-center justify-center">
      <div class="temperature flex flex-row justify-between bg-[rgb(243,245,247)] w-[15rem] h-[3rem]">
        <div>Temparature</div>
        <div id="tempValue">32.3 C</div>
      </div>
      <div class="humidity flex flex-row justify-between mt-[0.5rem] bg-[rgb(243,245,247)] w-[15rem] h-[3rem]" >
        <div>Humidity</div>
        <div id="humidValue">60%</div>
      </div>
    </div>
    
  </div>

  <div class="photoresistor flex-1 w-full h-[13rem] bg-[rgb(202,212,198)] mx-[0.5rem]">
    <!-- Nội dung của cảm biến photoresistor -->
    <div class="title mt-[0.5rem] font-[600] text-center">
      <span>Photoresistor sensor</span>
    </div>
    <div class="h-[11rem] w-[20rem]">
      <canvas id="photoresistor-chart"></canvas>
    </div> 
  </div>
  <div class="gasSensor flex-1 w-full h-[13rem] bg-[rgb(202,212,198)] mx-[0.5rem]">
    <!-- Nội dung của cảm biến gas sensor -->
    <div class="title mt-[0.5rem] font-[600] text-center">
      <span>Gas sensor</span>
    </div>
    <div class="h-[11rem] w-[20rem]">
      <canvas id="gasSensor-chart"></canvas>
    </div>  
  </div>
</div>


<!-- Hàng thứ hai chứa các panel con gồm bật tắt servo, light, buzzer -->
