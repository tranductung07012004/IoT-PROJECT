<img src="./img/logoSchool.jpg" alt="logoSchool" class="w-[6rem] h-[6rem]" />

<div class="container flex items-center justify-center h-screen>">

  <div
    class="login-form bg-[rgb(243,245,247)] rounded-lg pt-[1rem] pb-[1rem] px-[2rem] shadow-md w-[30rem]"
  >
    <!-- Tiêu đề -->
    <h2 class="title text-center text-[1.5rem] font-bold mb-[1rem]">Đăng ký</h2>
    <h4 class="mb-[1.5rem] text-gray-400 font-[300]">Nhập thông tin cần thiết để
      đăng kí tài khoản</h4>

    <!-- Form tài khoản -->
    <div class="mb-[1rem]">
      <label
        for="username"
        class="block text-[1rem] font-medium mb-[0.5rem]"
      ><span class="text-[rgb(243,28,36)]">*</span> Tài khoản</label>
      <input
        type="text"
        placeholder="Nhập email của bạn"
        class="w-full border border-gray-300 rounded-md p-[0.8rem] text-[1rem] focus:outline-none focus:ring-2 focus:ring-blue-400"
      />
    </div>

    <!-- Form nhập admin code -->
    <div class="mb-[1rem]">
      <label
        for="username"
        class="block text-[1rem] font-medium mb-[0.5rem]"
      ><span class="text-[rgb(243,28,36)]">*</span>Admin code</label>
      <input
        type="text"
        placeholder="Code đăng ký"
        class="w-full border border-gray-300 rounded-md p-[0.8rem] text-[1rem] focus:outline-none focus:ring-2 focus:ring-blue-400"
      />
    </div>

    <!-- Form nhập mật khẩu -->
    <div class="mb-[1rem]">
      <label
        for="password"
        class="block text-[1rem] font-medium mb-[0.5rem]"
      ><span class="text-[rgb(243,28,36)]">*</span> Mật khẩu</label>
      <input
        type="password"
        placeholder="Nhập mật khẩu"
        class="w-full border border-gray-300 rounded-md p-[0.8rem] text-[1rem] focus:outline-none focus:ring-2 focus:ring-blue-400"
      />
    </div>

    <!-- Form xác nhận lại mật khẩu -->
    <div class="mb-[1rem]">
      <label
        for="password"
        class="block text-[1rem] font-medium mb-[0.5rem]"
      ><span class="text-[rgb(243,28,36)]">*</span>Xác nhận mật khẩu</label>
      <input
        type="password"
        placeholder="Nhập lại mật khẩu ở trên"
        class="w-full border border-gray-300 rounded-md p-[0.8rem] text-[1rem] focus:outline-none focus:ring-2 focus:ring-blue-400"
      />
    </div>

    <!-- Nút đăng ký và đăng nhập -->
    <div class="flex justify-between mt-[1.5rem]">
      <a href="/" class="block">
        <button
          class="bg-[rgb(43,39,154)] text-white text-[1rem] font-medium py-[0.8rem] px-[2rem] rounded-md hover:bg-gray-500"
        >Về trang đăng nhập</button>
      </a>
      <a href="/" class="block">
        <button
          class="bg-[rgb(230,184,74)] text-white text-[1rem] font-medium py-[0.8rem] px-[2rem] rounded-md hover:bg-gray-500"
        >Đăng ký</button>
      </a>

    </div>

  </div>
</div>